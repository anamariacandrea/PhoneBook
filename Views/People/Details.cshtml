       <dt class="col-sm-2">
           @Html.DisplayNameFor(model=>model.Details)
       </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Titlu</th>
                    <th>Alt Titlu</th>
                </tr>
                @foreach(var item in Model.Details)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(mdItemm=>item.PhoneNumbers)
                        </td>
                        <td>@Html.DisplayFor(mdItem=>item.People)</td>
